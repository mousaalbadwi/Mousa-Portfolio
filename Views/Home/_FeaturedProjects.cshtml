@* Featured Projects (داخل About) *@
<style>
    .feat-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill,minmax(240px,1fr));
        gap: 1rem
    }

    .feat-card {
        background: rgba(255,255,255,.06);
        border: 1px solid rgba(255,255,255,.12);
        border-radius: 1rem;
        overflow: hidden;
        backdrop-filter: blur(6px)
    }

    .feat-thumb {
        width: 100%;
        height: 148px;
        object-fit: cover
    }

    .feat-body {
        padding: .85rem
    }

    .feat-title {
        font-weight: 700;
        font-size: 1rem;
        margin-bottom: .25rem
    }

    .feat-tech {
        font-size: .8rem;
        opacity: .85
    }

    .feat-links a {
        font-size: .9rem;
        margin-right: .6rem
    }
</style>

<div id="featuredProjects" class="glass-soft border rounded-4 p-3 p-md-4 mb-4" data-aos="fade-up">
    <h2 class="h4 fw-bold mb-3">Featured Projects</h2>
    <div class="feat-grid" id="featGrid" aria-live="polite"></div>
</div>
