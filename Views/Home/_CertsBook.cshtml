<script>
    (() => {
      const book   = document.getElementById('certsBook');
      // الترتيب: الغلاف الأيمن أولاً ثم كل الصفحات (كلها عناصر .leaf)
      const leaves = [...book.querySelectorAll('.leaf')];
      let index = 0; // كم ورقة/غلاف مقلوب (0..leaves.length)

      // ترتيب التراص حتى لا تظل أول ورقة فوق الكل
      function setStack(){
        leaves.forEach((el, i) => {
          const onRight = i >= index;                 // ما زالت على اليمين
          el.style.zIndex = onRight ? (200 + (leaves.length - i)) : (100 + i);
        });
      }

      function flip(to){
        index = Math.max(0, Math.min(leaves.length, to));
        leaves.forEach((el, i) => el.classList.toggle('flipped', i < index));
        setStack();
      }

      // Controls
      document.getElementById('btnNext')?.addEventListener('click', () => flip(index + 1));
      document.getElementById('btnPrev')?.addEventListener('click', () => flip(index - 1));
      document.getElementById('btnFS')?.addEventListener('click', () => {
        if (!document.fullscreenElement) book.requestFullscreen?.(); else document.exitFullscreen?.();
      });

      // Click to flip current/previous
      leaves.forEach((el, i) => el.addEventListener('click', () => {
        if (i < index) flip(i); else flip(i + 1);
      }));

      // Keyboard
      book.addEventListener('keydown', (e) => {
        if (e.key === 'ArrowRight') flip(index + 1);
        if (e.key === 'ArrowLeft')  flip(index - 1);
      });

      // Init: مغلق — الغلاف الأيمن ظاهر على اليمين
      setStack();
      flip(0);
    })();
</script>
