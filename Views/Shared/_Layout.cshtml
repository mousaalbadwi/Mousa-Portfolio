            </div>
        </div>

        <div class="container py-3 small d-flex flex-column flex-sm-row justify-content-between align-items-center gap-2 border-top" style="border-color: var(--border) !important;">
            <div>© @DateTime.Now.Year — MousaPortfolio. All rights reserved.</div>
            <div class="text-soft">Built with <span class="fw-semibold">ASP.NET Core</span>. Mousa Iyad Mustafa</div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
    <script>
        AOS.init({ duration: 700, once: true, offset: 80 });

        // Theme toggle
        const toggleBtn = document.getElementById('themeToggle');
        const icon = document.getElementById('themeIcon');
        toggleBtn?.addEventListener('click', () => {
          const html = document.documentElement;
          const next = html.getAttribute('data-theme') === 'dark' ? 'light' : 'dark';
          html.setAttribute('data-theme', next);
          localStorage.setItem('theme', next);
          icon.className = next === 'dark' ? 'bi bi-moon-stars-fill me-1' : 'bi bi-sun-fill me-1';
        });
        (function(){
          const cur = document.documentElement.getAttribute('data-theme');
          const icon = document.getElementById('themeIcon');
          if(icon) icon.className = cur === 'dark' ? 'bi bi-moon-stars-fill me-1' : 'bi bi-sun-fill me-1';
        })();

        // نجوم الخلفية
        (function(){
          const c = document.getElementById('bg-stars');
          if(!c) return;
          const ctx = c.getContext('2d');
          let w, h, stars;
          const STAR_COUNT = 140;

          function resize(){
            w = c.width = window.innerWidth;
            h = c.height = document.body.scrollHeight;
            stars = Array.from({length: STAR_COUNT}, () => ({
              x: Math.random()*w, y: Math.random()*h,
              r: Math.random()*1.2+.3, a: Math.random()*0.6+0.2,
              v: Math.random()*0.3+0.05
            }));
          }
          function step(){
            ctx.clearRect(0,0,w,h);
            const isDark = document.documentElement.getAttribute('data-theme') === 'dark';
            ctx.fillStyle = isDark ? 'rgba(255,255,255,0.9)' : 'rgba(0,0,0,0.7)';
            for(const s of stars){
              s.a += (Math.random()-0.5)*0.05;
              s.a = Math.max(0.1, Math.min(s.a, 1));
              ctx.globalAlpha = s.a;
              ctx.beginPath(); ctx.arc(s.x, s.y, s.r, 0, Math.PI*2); ctx.fill(); ctx.closePath();
              s.y -= s.v; if(s.y < -2){ s.y = h+2; s.x = Math.random()*w; }
            }
            ctx.globalAlpha = 1; requestAnimationFrame(step);
          }
          window.addEventListener('resize', resize);
          resize(); step();
        })();
    </script>

    <script>
        // smooth scroll للروابط اللي فيها #
        document.addEventListener('click', (e) => {
          const a = e.target.closest('a[href*="#"]');
          if (!a) return;
          const url = new URL(a.href);
          if (url.pathname !== window.location.pathname) return; // لو رايح صفحة ثانية خليه يروح
          const el = document.getElementById(url.hash.slice(1));
          if (!el) return;
          e.preventDefault();
          el.scrollIntoView({ behavior: 'smooth', block: 'start' });
          history.replaceState(null, '', url.pathname + url.hash);
        });
    </script>



    <script src="~/js/home.js" asp-append-version="true"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
