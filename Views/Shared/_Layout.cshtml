                    <span class="brand-dot me-1"></span> Mousa
                </a>
                <a class="nav-link px-3" asp-controller="Home" asp-action="Index">Home</a>
                <a class="nav-link px-3" asp-controller="Projects" asp-action="Index">Projects</a>
                <a class="nav-link px-3" asp-controller="Home" asp-action="About">About</a>
                <a class="nav-link px-3" asp-controller="Home" asp-action="Index" asp-fragment="contact">Contact</a>

                <div class="vr mx-2 d-none d-md-block"></div>
                <a class="btn btn-sm btn-primary rounded-pill px-3 me-2" href="~/files/CV.pdf" download="Mousa_CV.pdf" target="_blank" rel="noopener">
                    <i class="bi bi-download me-1"></i> Download CV
                </a>
                <button id="themeToggle" class="btn btn-sm btn-outline-secondary rounded-pill px-3" type="button" title="Toggle theme">
                    <i class="bi bi-moon-stars-fill me-1" id="themeIcon"></i><span class="d-none d-sm-inline">Theme</span>
                </button>
            </nav>
        </div>
    </header>

    <!-- ===== TempData Toast ===== -->
    @if (TempData["Toast"] is string toastMsg)
    {
        var t = (TempData["ToastType"] as string) ?? "ok";
        var cls = t == "ok" ? "alert-success" : "alert-danger";
        <div id="appToast"
             class="position-fixed top-0 end-0 m-3 alert @cls shadow border-0 rounded-3"
             role="alert"
             style="z-index: 1080; min-width: 260px;">
            @toastMsg
        </div>
        <script>
            setTimeout(() => { document.getElementById('appToast')?.remove(); }, 3500);
        </script>
    }

    <main class="py-4 flex-grow-1">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <!-- Footer ملزّق تحت -->
    <footer class="site-footer mt-auto">
        <div class="container py-5">
            <div class="row g-4">
                <div class="col-12 col-lg-4">
                    <div class="d-flex align-items-center mb-2">
                        <span class="brand-dot me-2"></span>
                        <h5 class="m-0 fw-bold">MousaPortfolio</h5>
                    </div>
                    <p class="text-soft mb-3">
                        Building reliable backends with ASP.NET Core and clean Bootstrap UIs.
